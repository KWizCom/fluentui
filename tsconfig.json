{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "strict": false,
    "typeRoots": [
      "./src/@types"
    ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.js"
  ]
}